struct reaction {

  /* Need to have two sempahores: one for oxyen, one for hydrogen */
  

  /* Two condition variables: one if extra oxygen is needed, one if 
     extra hydrogen is needed. */
  condition* low_h;
  condition* low_o;
  
  unsigned int num_h;
  unsigned int num_o;

};

void
reaction_init(struct reaction *reaction)
{
  cond_init(low_h);
  cond_init(low_o);

  num_h = 0;
  num_o = 0;

}

